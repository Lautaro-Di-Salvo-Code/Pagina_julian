---
import data from "../../Data/data.json";

const Works = data.es.Biografia.trabajos;
console.log(data);
---

<section class="h-full sm:h-[30vh] my-[2rem] py-[1rem] px-6" id="trabajos">
  <h2 class="text-center flex justify-center text-[1.5rem] my-[3rem] h-[2vh]">
    Mis mejores trabajos
  </h2>
  <ul
    class="flex flex-row flex-wrap justify-center gap-2 py-3 max-w-[900px] mx-auto"
  >
    {
      Works.map((e) => (
        //  transition-all .3s ease-in
        <a
          href={e.url}
          target="_blank"
          class="flex sm:hover:scale-110 hover:bg-[#4885b8] cursor-pointer gap-3 flex-col 
        bg-bg-color3 p-3 mt-[3rem] rounded-sm max-w-[150px] botonWorks"
        >
          <img
            class="h-auto w-[150px] flex justify-center mx-auto"
            src={e.img}
            alt=""
          />
          <p class="text-center">{e.titulo}</p>
        </a>
      ))
    }
  </ul>
</section>

<style>
  .botonWorks {
    background-image: linear-gradient(30deg, #6866e4, #4ce3f7);
    @media screen and (width > 600px) {
      &:hover {
        background-position: right center;
        background-size: 200% auto;
        transition: all 1s ease-out;
        -webkit-animation: pulse 1s infinite;
        animation: pulse512 1s infinite;
      }
      &:not(:hover) {
        transition: all 1s ease-out;
        /* -webkit-animation: pulse 1s infinite; */
        /* animation: pulse512 1s infinite; */
      }
    }
    @keyframes pulse512 {
      0% {
        box-shadow: 0 0 0 0 #0fc5e6cb;
      }
  
      70% {
        box-shadow: 0 0 0 10px rgb(218 103 68 / 0%);
      }
  
      100% {
        box-shadow: 0 0 0 0 rgb(218 103 68 / 0%);
      }
    }
      
    }
</style>
